<!-- app/views/startups/_form.html.erb -->
<%= simple_form_for(@startup) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :logo_url, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :homepage_url, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :description, as: :text, input_html: { class: 'form-control', rows: 5 } %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :industry, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :hq_location, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :last_funding, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :comments, as: :text, input_html: { class: 'form-control', rows: 5 } %> <!-- Ensure text area with proper rows -->
      </div>

    </div>
  </div>

  <div class="form-actions d-flex justify-content-start">
    <%= f.button :submit, "Update startup", class: 'btn btn-primary btn-custom' %>
  </div>
<% end %>

<div class="card-text">
  <%= link_to "Show this startup", @startup %> |
  <%= link_to "Back to startups", startups_path %>
</div>
