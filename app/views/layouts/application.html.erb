<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:page_title).presence || "Perpetual Growth | .alfred" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta property="og:title" content="Perpetual Growth. Empowering European Tech Founders">
  <meta property="og:description" content="Perpetual Growth empowers European Tech Founders to scale their businesses.">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://www.perpetual-growth.com">
  <meta property="og:image" content="https://media.licdn.com/dms/image/D4D0BAQGsQKGD4MwU3g/company-logo_200_200/0/1704903103073/perpetualinvestors_logo?e=2147483647&v=beta&t=NtR3XlR_aWI53qrrWQ-IJMDxEqO387ZUOXtsT5cgR-M>"

  <script src="https://kit.fontawesome.com/39fe72d235.js" crossorigin="anonymous"></script>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <link rel="icon" type="image/png" href="/favicon.ico">
</head>

<body>
  <% unless controller_name == 'home' && action_name == 'index' %>
    <%= render "shared/navbar" %>
    <%= render "shared/flashes" %>
  <% end %>

  <% unless controller_name == 'home' && action_name == 'index' || controller_name == 'sessions' || controller_name == 'registrations' || controller_name == 'passwords' %>
    <%= render "shared/navbar_wrapper" %>
  <% end %>

  <%= yield %>
</body>
</html>
