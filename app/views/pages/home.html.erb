<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>
<h1>HELLO WORLD</h1>

<ul>
  <% @startups.each do |startup| %>
    <li>
      <h2><%= startup.name %></h2>
      <p>
        <strong>Logo:</strong>
        <br>
        <img src="<%= startup.logo_url %>" alt="<%= startup.name %> logo" style="width:170px;height:170px;">
      </p>
      <p><strong>Industry:</strong> <%= startup.industry %></p>
      <p><strong>Country:</strong> <%= startup.hq_location %></p>
      <p><strong>Homepage URL:</strong> <%= link_to startup.homepage_url, startup.homepage_url, target: "_blank" %></p>
      <p><strong>Total Funding:</strong> <%= startup.total_funding %> million USD</p>
      <p><strong>Favorite:</strong> <%= startup.favorite ? 'Yes' : 'No' %></p>
    </li>
  <% end %>
</ul>
